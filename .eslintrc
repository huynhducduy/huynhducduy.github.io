{
    "extends": ["airbnb", "eslint:recommended"],
    "parser": "babel-eslint",
    "rules": {
        "react/jsx-filename-extension": [
            2,
            {
                "extensions": [".js", ".jsx", ".ts"]
            }
        ],
        "semi": [2, "always"],
        "key-spacing": [
            2,
            {
                "singleLine": {
                    "beforeColon": false,
                    "afterColon": true
                },
                "multiLine": {
                    "align": "colon",
                    "mode": "minimum"
                }
            }
        ],
        "comma-dangle": [
            2,
            "always-multiline",
            {
                "functions": "never"
            }
        ],
        "react/jsx-indent": [2, 4],
        "react/jsx-indent-props": [2, 4]
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "worker": true,
        "serviceworker": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "globals": {}
}
